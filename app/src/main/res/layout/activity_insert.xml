<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insert.InsertActivity">

    <TextView
        android:padding="20dp"
        android:textAppearance="@style/title"
        android:text="@string/asset_add_title"
        android:id="@+id/tv_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:paddingHorizontal="20dp"
        android:layout_below="@id/tv_add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:textAppearance="@style/add_item_name"
            android:text="@string/asset_type_title"
            android:id="@+id/tv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/et_type"
            android:background="@drawable/bg_add_value"
            android:layout_centerVertical="true"
           android:layout_alignParentEnd="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_type_value"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:textAppearance="@style/add_item_value"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>